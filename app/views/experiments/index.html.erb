<h1>Build Your Pizza</h1>
  <!-- <button class="btn btn-success">Add Experiment</button> -->

<table class="table table-striped table-bordered table-hover medium-space-from-top">
  <tr>
    <th>Experiment Slice</th>
    <th>Start</th>
    <th>End</th>
    <th>Status</th>
  </tr>
<% @slots.each do |slot| %>
  <%-if slot_is_control_group?(slot)-%>
    <tr>
      <td>Control Group Slice</td>
      <td>----</td>
      <td>----</td>
      <td><span class="label label-success">Active</span></td>
    </tr>
  <%-elsif slot==-1-%>
    <tr>
      <td>
        <a class="btn btn-small btn-success" href="/experiments/new">New Experiment Slice</a>
      </td>

      <td>----</td>
      <td>----</td>
      <td>----</td>
    </tr>
  <%-else-%>
    <tr>
      <td><%= link_to slot.to_s, experiment_path(slot) %></td>
      <td>----</td>
      <td>----</td>
      <td>Active</td>
    </tr>    
  <%-end-%>

<% end %>
</table>
<%#= link_to 'New Dashboard', new_dashboard_path %>