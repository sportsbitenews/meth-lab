<div class="inner">
<table class="table table-striped table-bordered table-hover">
  <tr>
  	<th></th>
  	<th colspan="3">Control Group (A)</th>
  	<th colspan="3">Test Group (B)</th>
  	<th>Results</th>
  </tr>
  <tr>
    <th>Goal Name</th>
    <th>Unique Exposures</th>
    <th>Goals Reached</th>
    <th>Conversion</th>
    <th>Unique Exposures</th>
	<th>Goals Reached</th>
	<th>Conversion</th>
	<th>Conversion Difference</th>
  </tr>
<% @experiment.experiment_kpis.keys.each do |kpi| %>
  <tr>
    <td><%= goal.name.titleize %></td>
    <td><%= goal.control_analytics[:exposures].to_i %></td>
    <td><%= goal.control_kpis[:kpi]  %></td>
    <td><%#= "%.2f" % (goal.group_a_conversion * 100.0) %>%</td>
    <td><%= goal.experiment_analytics[:exposures].to_i %></td>
    <td><%= goal.experiment_kpis[:kpi].to_i %></td>
    <td><%#= "%.2f" % (goal.group_b_conversion * 100.0) %>%</td>
    <td class="<%#=class_for_goal_row(goal.conversion_difference, goal.group_b_goals.to_i + goal.group_a_goals.to_i)%>"><%#= "%.1f" % goal.conversion_difference %>%</td>
  </tr>
<% end %>
</table>
</div>